<% include ../partials/header %>
    <div class="container">
       
            <h1 style="text-align:center;">CREATE A NEW BLOG-POST</h1>
             <div  style="width:50% ; margin:025px auto;">
                <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="blog[title]" value="<%= blog.title %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="url" name="blog[image]" value="<%= blog.image %>">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="blog[post]" ><%= blog.post %></textarea>
                    </div>
                    <div class="form-group">
                        <input class="form-control btn btn-primary" type="submit">
                    </div>
                </form>
                
            <a href="/blogs">GO BACK!!</a>
           </div> 
    </div>
<% include ../partials/footer %>