<% include ../partials/header %>
<div class="container">
    <div>
        <header class="jumbotron">
        <div class="container">
            <h1>Welcome to the ULTIMATE BlOgGeR</h1>
            <a href="/blogs/new" class="btn btn-primary">add new blog</a>
        </div>
        </header>
    </div>
    <div class="container card">
    <% blogs.forEach(function(blog){ %>
        <div class="row" style="margin-bottom:5px;">  
            <div class="col-sm-12 card border-light"> 
                <div class="row"> 
                    <div class="col-md-4" id="img-fix-index">
                        <div class="thumbnail">
                          <img class="img-fluid" src="<%= blog.image %>">
                         </div>
                    </div>
                    <div class="col-sm-1"></div>
                    <div class="col-sm-7 card-body"> 
                            <h2 class="card-title">
                                <%= blog.title %>
                            </h2>
                            <p>Author : <%= blog.author.username %></p>
                            <div class="card-text">
                            <p>Created on : <%= blog.created.toDateString() %></p>
                            <p><%= blog.post.substring(0,100) %>...</p>
                            </div>
                            <a href="/blogs/<%= blog._id%>" class="btn btn-primary">show more</a>
                            
                    </div>
                </div>    
            </div> 
        </div> 
        <hr>
    <% }); %>
    </div>
</div>
<% include ../partials/footer %>
