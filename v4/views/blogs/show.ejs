<% include ../partials/header %>

<h1>
    <%= blog.title %>
</h1>

<img src="<%= blog.image %>">

<p><%= blog.post %></p>
<a class="btn btn-primary" href="/blogs/<%= blog._id %>/comments/new">ADD COMMENT</a>
<% blog.comments.forEach(function(comment){ %>
    <p><strong><%= comment.author %></strong> - <%= comment.text %> </p>
<% }) %>


<% include ../partials/footer %>