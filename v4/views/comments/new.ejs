<% include ../partials/header %>
    <div class="container">
       
            <h1 style="text-align:center;">Add New Comment to <%= blog.title %></h1>
             <div  style="width:50% ; margin:025px auto;">
                <form action="/blogs/<%= blog._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="text">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[author]" placeholder="author">
                    </div>
                    <div class="form-group">
                        <input class="form-control btn btn-primary" type="submit">
                    </div>
                </form>
                
            <a href="/blogs/<%= blog._id %>">GO BACK!!</a>
           </div> 
    </div>
<% include ../partials/footer %>